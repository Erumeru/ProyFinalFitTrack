<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondoGris"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:paddingTop="40dp"
            android:id="@+id/linearRaiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoGris"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imLogo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/logoft" />

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sourcesanspro_bold"
                android:text="FitTrack"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvSubtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/sspro_regular"
                android:gravity="center"
                android:text="Tu fitbro en cada paso del camino"
                android:textColor="@color/white" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="70dp"
                   >

                    <TextView
                        android:id="@+id/tvTooltipCorreo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Correo *"
                        android:gravity="center"
                        android:fontFamily="@font/sspro_regular"
                        android:layout_marginTop="8dp"
                        />
                    <EditText
                        android:id="@+id/editTextCorreo"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tvTooltipContra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:paddingTop="10dp"
                        android:text="Contraseña *"
                        android:fontFamily="@font/sspro_regular"

                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        />
                    <EditText
                        android:id="@+id/editTextContra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="300dp"
                        android:layout_gravity="center"
                        android:inputType="textPassword"
                        android:hint=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tvTooltipContraConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:paddingTop="10dp"
                        android:text="Confirmar contraseña *"
                        android:fontFamily="@font/sspro_regular"

                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        />
                    <EditText
                        android:id="@+id/editTextContraConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:width="300dp"
                        android:layout_gravity="center"
                        android:inputType="textPassword"
                        android:hint=""
                        />
                </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                >
            <Button
                android:id="@+id/btnUnete"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/verdePrincipal"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:fontFamily="@font/sspro_regular"
                android:textFontWeight="600"
                android:text="¡Únete ahora!"
                android:textSize="16dp"

                />


                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/tvToolTipCuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="¿Ya tienes una cuenta?"
                    android:fontFamily="@font/sspro_regular"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/btnUnete"
                    android:paddingEnd="30dp"
                    />
                <TextView
                    android:id="@+id/tvIniciarSesion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Inicia sesión"
                    android:fontFamily="@font/sourcesanspro_bold"
                    app:layout_constraintTop_toBottomOf="@+id/btnUnete"
                    app:layout_constraintEnd_toEndOf="@id/btnUnete"
                    android:gravity="center"
                    android:paddingEnd="10dp"


                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>